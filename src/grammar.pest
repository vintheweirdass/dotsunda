RarangkenReplacer = {
    Spell_I
  | Spell_U
  | Spell_E
  | Spell_EAcute
  | Spell_Eu
  | Spell_O
}

RarangkenSuffix = { Spell_Ng | Spell_R | Spell_H }

RarangkenInfix = { Spell_Y | Spell_R | Spell_L }

OuterContent = { ((EscapeSymbol ~ EscapedChar) | OuterChars)+ }

EscapeSymbol = _{ "\\" }

EscapedChar = { ANY }

// EscapedReservedChar =  { SundaContentParentheses | SundaNumberParentheses | EscapeSymbol }

OuterChars = { (!(SundaContentParenthese | EscapeSymbol) ~ ANY)+ }
