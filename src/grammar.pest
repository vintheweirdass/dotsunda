content = { SOI ~ AnySyntax+ ~ EOI }

AnySyntax = _{
    SundaContent
  | OuterContent
}

SundaContentParenthese = _{ "'" }


SundaContent = {
    SundaContentParenthese ~ (VisiblePlainContent? ~ (SundaWord|SundaNumbers) ~ ((VisiblePlainContent? ~ (SundaWord|SundaNumbers)))* ~ VisiblePlainContent?) ~ SundaContentParenthese
}

VisiblePlainContent = { (!(ASCII_ALPHA | SundaContentParenthese | NUMBER ) ~ ((EscapeSymbol ~ EscapedChar) | PlainChars))+ }
PlainChars = {(!(ASCII_ALPHA | SundaContentParenthese | NUMBER | EscapeSymbol)~ ANY)+}

SundaWord = { (Syllable)+ }

NgalagenaWithRarangkenReplacer = { Consonant ~ RarangkenReplacer }

NgalagenaWithRarangkenRemover = { Consonant }

NgalagenaWithRarangkenInfix = { Consonant ~ RarangkenInfix ~ Spell_A }

NgalagenaWithRarangkenSuffix = { Consonant ~ Spell_A ~ RarangkenSuffix ~ !(Vocal) }

Ngalagena = { Consonant ~ Spell_A }

VocalWithRarangkenSuffix = { Vocal ~ RarangkenSuffix }

Syllable = _{
  | NgalagenaWithRarangkenSuffix
  | VocalWithRarangkenSuffix
  | NgalagenaWithRarangkenReplacer
  | Ngalagena
  | Vocal
  | NgalagenaWithRarangkenRemover
  | NgalagenaWithRarangkenInfix
}

// list of words.. ig?

Spell_A = _{ "a" | "A" }
Spell_I = _{ "i" | "I" }
Spell_U = _{ "u" | "U" }
